<% if signed_in? %>
  <h4>Add a review:</h4>
  <%= form_for([@product, @product.comments.build]) do |f| %>

      <%= f.label(:body, "Comments")%><br>
      <%= f.text_area :body, size: "30x3",placeholder: "Write your review here", style: "resize:none" %>
      <br><br>
      <div class="rating"></div>
      <br>
      <%= f.submit "Submit" %>

  <% end %>
<% end %>
